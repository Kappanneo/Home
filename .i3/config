 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                               SETTINGS                                      #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 # Set mod key (Mod1=<Alt>, Mod4=<Super>)
 set $mod Mod4

 # set default desktop layout (default is tiling)
 # workspace_layout tabbed <stacking|tabbed>

 # Configure border style <normal|1pixel|pixel xx|none|pixel>
 new_window pixel 2
 new_float normal 2

 # Hide borders
 hide_edge_borders none

 # Font for window titles. Will also be used by the bar unless a different font
 # is used in the bar {} block below.
 font pango:DejaVu Sans Mono 8

 # go back to previous workspace if you try to go to the current one
 # (allow for fast window movement to a workspace and back)
 workspace_auto_back_and_forth yes

 # focus on mouseover (is a pain if you happen to have a mouse)
 focus_follows_mouse no

 # I like the original snake better
 focus_wrapping no

 # smart|ignore|leave_fullscreen
 popup_during_fullscreen leave_fullscreen

 # smart|urgent|focus|none
 focus_on_window_activation none

 #                                 COLORS                                      #

 # class                 border  backgr. text    ind.    child
 client.focused          #4CC97E #4CC97E #ffffff #4CC97E #4CC97E
 client.focused_inactive #222222 #222222 #ffffff #222222 #222222
 client.unfocused        #222222 #222222 #888888 #222222 #222222
 client.urgent           #222222 #900000 #ffffff #900000 #900000
 client.placeholder      #000000 #222222 #ffffff #000000 #222222

 client.background       #222222

 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                               DEFINITIONS                                   #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 # The (new) i3-dmenu-desktop which only displays applications
 # shipping a .desktop file. It is a wrapper around dmenu, so you need that
 # installed.
 set $dmenu i3-dmenu-desktop

 # file manager
 set $fm nautilus -w

 # for brevity
 set $exec exec --no-startup-id
 set $exec_always exec_always --no-startup-id
 set $alert notify-send --expire-time=500
 set $refresh_status_bar exec killall -USR1 i3status
 set $focus_all focus parent; focus parent; focus parent; focus parent; focus parent; focus parent; focus parent; focus parent; focus parent; focus parent; focus parent; focus parent
 set $focus_one focus child ; focus child ; focus child ; focus child ; focus child ; focus child ; focus child ; focus child ; focus child ; focus child ; focus child ; focus child
 set $no_border [tiling] border none
 set $border [tiling] border pixel 2
 set $alt_gr "ISO_Level3_Shift"
 set $emacs emacsclient -create-frame --alternate-editor=""

 #                                KEYBINDINGS                                  #

 set $disable_Caps setxkbmap -option ctrl:nocaps
 set $enable_Caps setxkbmap -option
 set $oklò_disable ~/.bin/oklò.sh 0
 set $oklò_enable ~/.bin/oklò.sh 1
 set $wasd_disable ~/.bin/wasd.sh 0
 set $wasd_enable ~/.bin/wasd.sh 1

 #                              FUNCTIONALITIES                                #

 # lockscreen
 set $lock ~/.bin/lock.sh
 set $update_startup_lockscreen ~/.bin/update_startup_lockscreen.sh

 # touchpad toggle
 set $touchpad_toggle ~/.bin/device_toggle.sh touchpad

 # mouse and touchpad
 set $mouse_on ~/.bin/device_toggle.sh mouse 1
 set $mouse_off ~/.bin/device_toggle.sh mouse 0
 set $touchpad_on ~/.bin/device_toggle.sh touchpad 1
 set $touchpad_off ~/.bin/device_toggle.sh touchpad 0
 set $pointer_hide xdotool mousemove 2500 1200
 set $pointer_show xdotool mousemove 800 450

 # autoscroll
 set $enable_autoscroll ~/.bin/autoscroll.sh 1

 # brightness
 set $brightness_up exec "xbacklight +5; notify-send 'brightness up'"
 set $brightness_down exec "xbacklight -5; notify-send 'brightness down'"

 # screen saver
 set $screen_off xset dpms force off

 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                               STATUS-BAR                                    #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 bar {
        status_command    ./.bin/my_status.sh
        position          bottom
        mode              dock
        workspace_buttons yes
        colors {
                   background #000000
                   statusline #999999
                   focused_workspace  #ffffff #000000
                   active_workspace   #ffffff #000000
                   inactive_workspace #888888 #000000
                   urgent_workspace   #ffffff #000000
               }

     # disable scrolling on status bar
        bindsym button4 nop # scroll wheel up
        bindsym button5 nop # scroll wheel down

     # no border on middle mouse (never change mode here)
        bindsym button2 $no_border
 }

 #                                 WORKSPACES                                  #

 set $w1 1.[  ]
 set $w2 2.[ ]
 set $w3 3.[]
 set $w4 4.[]
 set $w5 5.[]
 set $w6 6.[ ]
 set $w7 7.[ ]
 set $w8 8.[]
 set $w9 9.[]


 # this one is for cut and paste
 set $wx X


 #                                  LAYOUTS                                    #

 set $layout_1 i3-msg 'workspace --no-auto-back-and-forth 1.[  ]; split h; focus parent; focus parent; focus parent; focus parent; focus parent; kill; append_layout ~/.workspaces/1.json'
 set $layout_2 i3-msg 'workspace --no-auto-back-and-forth 2.[ ]; split h; focus parent; focus parent; focus parent; focus parent; focus parent; kill; append_layout ~/.workspaces/2.json'

 set $fill_1 chromium --new-window --profile-directory=Default https://web.telegram.org/ & sleep 0.25; chromium --new-window --profile-directory=Default https://calendar.google.com/calendar/ https://mail.google.com/mail & sleep 0.5; chromium --new-window --profile-directory=Default https://getpocket.com/a/queue/list/
 set $fill_2 nautilus -w & sleep 0.5; nautilus -w Downloads & emacsclient -create-frame --alternate-editor='' ~/memo & sleep 0.5; chromium --new-window --profile-directory=Default & gnome-terminal

 #                                    MODES                                    #

 set $brg "BRGHT: [super+] [0-9] set brightness level  [+] increase  [-] decrease"
 set $cnf "CONFG: [super+] [c]onfig  [a]pps  gru[b]  [e]macs  [g]uide  [1-2|l]ayouts  [p]amac  [r]edshift  [s]ystemd  [z]sh"
 set $lft "LEFT: [wasd] arrows  [q-e] page up-down  [r]eturn  [z] menu  [x] escape"
 set $pow "POWER: [q] power off  [r]estart  [s]uspend  [h]ibernate  [x] turn off screen  [l]ock  [esc] do nothing"
 set $red "REDSH: [super+] [0-9] one shot red shift  [+] increase"
 set $rgh "RIGHT: [oklò] arrows  [j-à] home-end  [i-p] page up-down  [period] menu  [comma] escape"
 set $str "START: [super+] [1-2] layouts [u]pdate startup lockscreen"
 set $sup "SUPER"
 set $tmp "STAMP: [super+] [t]ake screenshot [w]indow [s]elect [o]pen screenshot folder"
 set $wrt "default"


 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                                APPLICATIONS                                 #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 # discord and skype
 assign [class="discord"] $w6
 assign [title="Skype"] $w6

 # code
 assign [class="code-oss"] $w7

 # texmaker
 assign [title="Texmaker"] $w7

 # gimp
 assign [class="Gimp.*"] $w7

 # steam
 assign [class="Steam"] $w9
 for_window [class="Steam"] split toggle
 for_window [title="Steam - News"] kill

 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                                ON-NEW-WINDOW                                #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 for_window $border
 for_window [class=".?" title=".?"] split toggle, fullscreen disable
 for_window [floating] split toggle, floating disable, fullscreen disable

 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                                  STARTUP                                    #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 # lockscreen
 $exec i3lock -ui ~/Pictures/startup_lockscreen.png

 # keybinding
 $exec $disable_Caps && xmodmap -e "keycode 135 = Super_R NoSymbol Super_R NoSymbol Super_R"

 # pointer disabled by default
 $exec $touchpad_off && $mouse_off && $pointer_hide

 # middle-mouse scroll
 $exec $enable_autoscroll

 # background (not always permanent, may need reaload)
 $exec_always $enable_autoscroll
 $exec_always nitrogen --restore
 $exec_always fix_xcursor

 # background applications
 $exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
 $exec nitrogen --restore; sleep 1; compton -b
 $exec xfce4-power-manager
 $exec alttab -s 1 -d 1

 # bar applications
 $exec nm-applet
 $exec pamac-tray
 $exec pa-applet
 $exec clipit

 # reshift oneshot mode (to set starting temperature according to time)
 $exec redshift -o

 # premade layout
 $exec $layout_2; $fill_2

 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                                  COMMANDS                                   #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 # $wrt: display
 bindsym XF86Display $exec xrandr --output eDP1 --mode 1920x1080 --preferred

 # $wrt: middle mouse no border
 bindsym --border button2 $no_border

 # $wrt: screen brightness controls
 bindsym XF86MonBrightnessUp $brightness_up
 bindsym XF86MonBrightnessDown $brightness_down

 # $wrt: screen poweroff
 bindsym XF86ScreenSaver $exec $screen_off

 # $wrt: screenshot
 bindsym Print $exec i3-scrot

 # $wrt: touchpad toggle
 bindsym XF86TouchpadToggle $exec $touchpad_toggle



 #                                ALT-COMMANDS                                 #
 # $wrt: kill
 bindsym Mod1+F4 kill; $refresh_status_bar



 #                                   MODES                                     #
 # $wrt: exit to other mode
 bindsym Mod4+b mode $brg; $exec $alert $brg
 bindsym Mod4+c mode $cnf; $exec $alert $cnf
 bindsym control+"Super_L" mode $lft; $exec $alert $lft && $wasd_enable
 bindsym XF86PowerOff mode $pow; $exec $alert $pow, fullscreen disable
 bindsym Mod4+r mode $red; $exec $alert $red
 bindsym control+"Super_R" mode $rgh; $exec $alert $rgh && $oklò_enable
 bindsym Mod4+"Super_R" mode $rgh; $exec $alert $rgh && $oklò_enable
 bindsym Mod4+backslash mode $str; $exec $alert $str
 bindsym "Super_L" mode $sup; $exec $alert $sup
 bindsym "Super_R" mode $sup; $exec $alert $sup
 bindsym Mod4+t mode $tmp; $exec $alert $tmp



 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #
 #                                   MODES                                     #
 # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # # #

 #                               POWEROFF-MODE                                 #

 mode $pow {

 # $pow: options
 bindsym q $exec systemctl poweroff
 bindsym r $exec systemctl reboot
 bindsym s $exec systemctl suspend
 bindsym h $exec systemctl hibernate
 bindsym x $exec $lock && $screen_off
 bindsym l $exec $lock

 # $pow: exit to other mode
 bindsym Mod4+b mode $brg; $exec $alert $brg
 bindsym Mod4+c mode $cnf; $exec $alert $cnf
 bindsym control+"Super_L" mode $lft; $exec $alert $lft && $wasd_enable
 bindsym Mod4+r mode $red; $exec $alert $red
 bindsym control+"Super_R" mode $rgh; $exec $alert $rgh && $oklò_enable
 bindsym Mod4+"Super_R" mode $rgh; $exec $alert $rgh && $oklò_enable
 bindsym Mod4+backslash mode $str; $exec $alert $str
 bindsym "Super_L" mode $sup; $exec $alert $sup
 bindsym "Super_R" mode $sup; $exec $alert $sup
 bindsym Mod4+t mode $tmp; $exec $alert $tmp
 bindsym control+"Alt_L" mode $wrt; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
 bindsym control+$alt_gr mode $wrt; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
 bindsym Mod1+$alt_gr mode $wrt; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide

 # $pow: display
 bindsym XF86Display $exec xrandr --output eDP1 --mode 1920x1080 --preferred

 # $pow: middle mouse no border
 bindsym --border button2 $no_border

 # $pow: screen brightness controls
 bindsym XF86MonBrightnessUp $brightness_up
 bindsym XF86MonBrightnessDown $brightness_down

 # $pow: screen poweroff
 bindsym XF86ScreenSaver $exec $screen_off

 # $pow: screenshot
 bindsym Print $exec i3-scrot

 # $pow: touchpad toggle
 bindsym XF86TouchpadToggle $exec $touchpad_toggle

 # $pow: disabled keys
 bindsym Delete $exec $alert nope
 bindsym backslash $exec $alert nope
 bindsym 1 $exec $alert nope
 bindsym 2 $exec $alert nope
 bindsym 3 $exec $alert nope
 bindsym 4 $exec $alert nope
 bindsym 5 $exec $alert nope
 bindsym 6 $exec $alert nope
 bindsym 7 $exec $alert nope
 bindsym 8 $exec $alert nope
 bindsym 9 $exec $alert nope
 bindsym 0 $exec $alert nope
 bindsym apostrophe $exec $alert nope
 bindsym igrave $exec $alert nope
 bindsym BackSpace $exec $alert nope
 bindsym Tab $exec $alert nope
 bindsym w $exec $alert nope
 bindsym e $exec $alert nope
 bindsym t $exec $alert nope
 bindsym y $exec $alert nope
 bindsym u $exec $alert nope
 bindsym i $exec $alert nope
 bindsym o $exec $alert nope
 bindsym p $exec $alert nope
 bindsym egrave $exec $alert nope
 bindsym plus $exec $alert nope
 bindsym Return $exec $alert nope
 bindsym "Caps_Lock" $exec $alert nope
 bindsym a $exec $alert nope
 bindsym d $exec $alert nope
 bindsym f $exec $alert nope
 bindsym g $exec $alert nope
 bindsym j $exec $alert nope
 bindsym k $exec $alert nope
 bindsym ograve $exec $alert nope
 bindsym agrave $exec $alert nope
 bindsym ugrave $exec $alert nope
 bindsym "Shift_L" $exec $alert nope
 bindsym less $exec $alert nope
 bindsym z $exec $alert nope
 bindsym c $exec $alert nope
 bindsym v $exec $alert nope
 bindsym b $exec $alert nope
 bindsym n $exec $alert nope
 bindsym m $exec $alert nope
 bindsym comma $exec $alert nope
 bindsym period $exec $alert nope
 bindsym minus $exec $alert nope
 bindsym "Shift_R" $exec $alert nope
 bindsym "Control_L" $exec $alert nope
 bindsym "Alt_L" $exec $alert nope
 bindsym space $exec $alert nope
 bindsym $alt_gr $exec $alert nope
 bindsym Menu $exec $alert nope
 bindsym "Control_R" $exec $alert nope

 }

 #                                WRITE-MODE                                   #

 mode $sup {

 # $sup: display
 bindsym XF86Display $exec xrandr --output eDP1 --mode 1920x1080 --preferred

 # $sup: middle mouse no border
 bindsym --border button2 $no_border

 # $sup: screen brightness controls
 bindsym XF86MonBrightnessUp $brightness_up
 bindsym XF86MonBrightnessDown $brightness_down

 # $sup: screen poweroff
 bindsym XF86ScreenSaver $exec $screen_off

 # $sup: screenshot
 bindsym Print $exec i3-scrot

 # $sup: touchpad toggle
 bindsym XF86TouchpadToggle $exec $touchpad_toggle


 # $sup: kill
 bindsym Mod1+F4 kill; $refresh_status_bar


 # $sup: application menu
 bindsym Mod4+Shift+Menu $exec morc_menu

 # $sup: default move
 bindsym Mod4+Shift+Up move up
 bindsym Mod4+Shift+Left move left
 bindsym Mod4+Shift+Down move down
 bindsym Mod4+Shift+Right move right

 # $sup: default split and move
 bindsym Mod4+control+Shift+Up focus up; split v; focus down; move up
 bindsym Mod4+control+Shift+Left focus left; split v; focus right; move left
 bindsym Mod4+control+Shift+Down focus down; split v; focus up; move down
 bindsym Mod4+control+Shift+Right focus right; split v; focus left; move right

 # $sup: fullscreen
 bindsym Mod4+f fullscreen toggle
 bindsym Mod4+Shift+f $exec "sleep 0.5; xdotool key F11"

 # $sup: move focused container to workspace and follow
 bindsym Mod4+control+1 move container to workspace $w1; workspace --no-auto-back-and-forth $w1
 bindsym Mod4+control+2 move container to workspace $w2; workspace --no-auto-back-and-forth $w2
 bindsym Mod4+control+3 move container to workspace $w3; workspace --no-auto-back-and-forth $w3
 bindsym Mod4+control+4 move container to workspace $w4; workspace --no-auto-back-and-forth $w4
 bindsym Mod4+control+5 move container to workspace $w5; workspace --no-auto-back-and-forth $w5
 bindsym Mod4+control+6 move container to workspace $w6; workspace --no-auto-back-and-forth $w6
 bindsym Mod4+control+7 move container to workspace $w7; workspace --no-auto-back-and-forth $w7
 bindsym Mod4+control+8 move container to workspace $w8; workspace --no-auto-back-and-forth $w8
 bindsym Mod4+control+9 move container to workspace $w9; workspace --no-auto-back-and-forth $w9

 # $sup: oklò move
 bindsym Mod4+Shift+o move up
 bindsym Mod4+Shift+k move left
 bindsym Mod4+Shift+l move down
 bindsym Mod4+Shift+ograve move right

 # $sup: oklò split and move
 bindsym Mod4+control+Shift+o focus up; split v; focus down; move up
 bindsym Mod4+control+Shift+k focus left; split v; focus right; move left
 bindsym Mod4+control+Shift+l focus down; split v; focus up; move down
 bindsym Mod4+control+Shift+ograve focus right; split v; focus left; move right

 # $sup: resize (precise)
 bindsym Mod4+control+i resize shrink height 1 px or 1 ppt
 bindsym Mod4+control+p resize  grow  height 1 px or 1 ppt
 bindsym Mod4+control+Prior resize shrink height 1 px or 1 ppt
 bindsym Mod4+control+Next resize  grow  height 1 px or 1 ppt
 bindsym Mod4+control+Shift+i resize shrink width  1 px or 1 ppt
 bindsym Mod4+control+Shift+p resize  grow  width  1 px or 1 ppt
 bindsym Mod4+control+Shift+Prior resize shrink width  1 px or 1 ppt
 bindsym Mod4+control+Shift+Next resize  grow  width  1 px or 1 ppt

 # $sup: resize (scale)
 bindsym Mod4+control+minus resize shrink height 5 px or 5 ppt; resize shrink width  5 px or 5 ppt
 bindsym Mod4+control+plus resize  grow  height 5 px or 5 ppt; resize  grow  width  5 px or 5 ppt
 bindsym Mod4+control+Shift+minus resize shrink height 1 px or 1 ppt; resize shrink width  1 px or 1 ppt
 bindsym Mod4+control+Shift+plus resize  grow  height 1 px or 1 ppt; resize  grow  width  1 px or 1 ppt

 # $sup: resize window
 bindsym Mod4+i resize shrink height 5 px or 5 ppt
 bindsym Mod4+p resize  grow  height 5 px or 5 ppt
 bindsym Mod4+Prior resize shrink height 5 px or 5 ppt
 bindsym Mod4+Next resize  grow  height 5 px or 5 ppt
 bindsym Mod4+Shift+i resize shrink width  5 px or 5 ppt
 bindsym Mod4+Shift+p resize  grow  width  5 px or 5 ppt
 bindsym Mod4+Shift+Prior resize shrink width  5 px or 5 ppt
 bindsym Mod4+Shift+Next resize  grow  width  5 px or 5 ppt

 # $sup: split orientation
 bindsym Mod4+v split v; $exec notify-send 'vertical'
 bindsym Mod4+h split h; $exec notify-send 'horizontal'
 bindsym Mod4+g split v; focus parent; layout toggle split; focus child

 # $sup: touchpad and mouse
 bindsym Mod4+z $exec $mouse_on
 bindsym Mod4+space $exec $touchpad_on && $pointer_show
 bindsym Mod4+Shift+z $exec $mouse_off && $touchpad_off && $pointer_hide
 bindsym Mod4+Shift+space $exec $mouse_off && $touchpad_off && $pointer_hide

 # $sup: wasd move
 bindsym Mod4+Shift+w move up
 bindsym Mod4+Shift+a move left
 bindsym Mod4+Shift+s move down
 bindsym Mod4+Shift+d move right

 # $sup: wasd split and move
 bindsym Mod4+control+Shift+w focus up; split v; focus down; move up
 bindsym Mod4+control+Shift+a focus left; split v; focus right; move left
 bindsym Mod4+control+Shift+s focus down; split v; focus up; move down
 bindsym Mod4+control+Shift+d focus right; split v; focus left; move right

 # $sup: xkill
 bindsym Mod4+q --release $exec xkill

 # $sup: browse workspaces
 bindsym Mod4+Tab workspace next; $refresh_status_bar
 bindsym Mod4+Shift+Tab workspace prev; $refresh_status_bar
 bindsym Mod4+j workspace prev; $refresh_status_bar
 bindsym Mod4+agrave workspace next; $refresh_status_bar
 bindsym Mod4+Home workspace prev; $refresh_status_bar
 bindsym Mod4+End workspace next; $refresh_status_bar
 bindsym Mod4+ugrave workspace back_and_forth; $refresh_status_bar

 # $sup: cut
 bindsym Mod4+control+x move container to workspace $wx; $refresh_status_bar

 # $sup: default focus
 bindsym Mod4+Up focus up; $refresh_status_bar
 bindsym Mod4+Left focus left; $refresh_status_bar
 bindsym Mod4+Down focus down; $refresh_status_bar
 bindsym Mod4+Right focus right; $refresh_status_bar

 # $sup: file manager
 bindsym Mod4+control+f $exec $fm; $refresh_status_bar
 bindsym Mod4+control+j $exec $fm Downloads; $refresh_status_bar

 # $sup: focus and border
 bindsym Mod4+x fullscreen disable $border $focus_one; $refresh_status_bar
 bindsym Mod4+Shift+x $no_border; $refresh_status_bar
 bindsym Mod4+less focus child; $refresh_status_bar
 bindsym Mod4+Shift+greater focus parent; $refresh_status_bar
 bindsym Mod4+control+a fullscreen disable $focus_all; $refresh_status_bar

 # $sup: kill
 bindsym Mod4+control+w kill; $refresh_status_bar

 # $sup: oklò focus
 bindsym Mod4+o focus up; $refresh_status_bar
 bindsym Mod4+k focus left; $refresh_status_bar
 bindsym Mod4+l focus down; $refresh_status_bar
 bindsym Mod4+ograve focus right; $refresh_status_bar

 # $sup: open emacs
 bindsym Mod4+e $exec $emacs; $refresh_status_bar

 # $sup: open terminal
 bindsym Mod4+Return $exec gnome-terminal; $refresh_status_bar

 # $sup: paste
 bindsym Mod4+control+v $exec "i3-msg 'workspace --no-auto-back-and-forth $wx; move container to workspace $wx; workspace $wx'"; $refresh_status_bar

 # $sup: save layout
 bindsym Mod4+control+s $exec "i3-save-tree > ~/.workspaces/stamp.json; emacsclient -create-frame --alternate-editor='' ~/.workspaces/stamp.json"; $refresh_status_bar

 # $sup: shutdown emacs server
 bindsym Mod4+control+Shift+e $exec pkill emacs; $refresh_status_bar

 # $sup: switch workspace
 bindsym Mod4+1 workspace $w1; $refresh_status_bar
 bindsym Mod4+2 workspace $w2; $refresh_status_bar
 bindsym Mod4+3 workspace $w3; $refresh_status_bar
 bindsym Mod4+4 workspace $w4; $refresh_status_bar
 bindsym Mod4+5 workspace $w5; $refresh_status_bar
 bindsym Mod4+6 workspace $w6; $refresh_status_bar
 bindsym Mod4+7 workspace $w7; $refresh_status_bar
 bindsym Mod4+8 workspace $w8; $refresh_status_bar
 bindsym Mod4+9 workspace $w9; $refresh_status_bar

 # $sup: wasd focus
 bindsym Mod4+w focus up; $refresh_status_bar
 bindsym Mod4+a focus left; $refresh_status_bar
 bindsym Mod4+s focus down; $refresh_status_bar
 bindsym Mod4+d focus right; $refresh_status_bar



 # $sup: reload configuration
 bindsym Mod4+control+r $exec "make -C ~/.i3 && i3-msg $no_border restart"
 bindsym Mod4+control+Shift+r $exec "make -C ~/.i3 stable && i3-msg $no_border restart"

 # $sup: start dmenu for applications
 bindsym Mod4+Shift+exclam $exec $dmenu

 # $sup: start dmenu for commands
 bindsym Mod4+control+e $exec dmenu_run



 # $sup: exit to other mode
 bindsym Mod4+b mode $brg; $exec $alert $brg
 bindsym Mod4+c mode $cnf; $exec $alert $cnf
 bindsym control+"Super_L" mode $lft; $exec $alert $lft && $wasd_enable
 bindsym XF86PowerOff mode $pow; $exec $alert $pow, fullscreen disable
 bindsym Mod4+r mode $red; $exec $alert $red
 bindsym control+"Super_R" mode $rgh; $exec $alert $rgh && $oklò_enable
 bindsym Mod4+"Super_R" mode $rgh; $exec $alert $rgh && $oklò_enable
 bindsym Mod4+backslash mode $str; $exec $alert $str
 bindsym Mod4+t mode $tmp; $exec $alert $tmp
