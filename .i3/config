# configuration files launcher
mode $cnfg {
	# options
	bindsym c mode $lock $lock_style $exec emacs ~/.i3/config & $alert_lock & $touchpad_off
	bindsym i mode $lock $lock_style $exec emacs ~/.gitignore
	bindsym a mode $lock $lock_style $exec emacs /sudo::/usr/share/applications/ & $alert_lock & $touchpad_off
	bindsym e mode $lock $lock_style $exec emacs ~/.emacs & $alert_lock & $touchpad_off
	bindsym s mode $lock $lock_style $exec emacs ~/.i3status/config & $alert_lock & $touchpad_off
	bindsym z mode $lock $lock_style $exec emacs ~/.zshrc & $alert_lock & $touchpad_off
	bindsym g mode $lock $lock_style $exec chromium --new-window i3wm.org/docs/userguide.html & $alert_lock & $touchpad_off
	bindsym y mode $lock $lock_style $exec emacs ~/.workspaces/stamp.json & $alert_lock & $touchpad_off
	bindsym 1 mode $lock $lock_style $exec emacs ~/.workspaces/$w1.json & $alert_lock & $touchpad_off
	bindsym 2 mode $lock $lock_style $exec emacs ~/.workspaces/$w2.json & $alert_lock & $touchpad_off
	bindsym p mode $lock $lock_style $exec xdg-open /tmp/latest-screenshot.png & $alert_lock & $touchpad_off
	# alert
	bindsym Caps_Lock $exec $alert CAPS
	bindsym "Super_L" $exec $alert SUPR
	# quit
	bindsym XF86PowerOff     mode $quit $quit_style $exec $alert $quit
	# super
	bindsym Escape mode $super $super_style $exec $alert $super
	# lock
	bindsym --release Escape mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --border button2 mode $lock $lock_style $exec $alert_lock & $touchpad_off_2
	# unused keys (lock)
	bindsym Delete                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym backslash                     mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 1                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 2                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 3                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 4                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 5                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 6                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 7                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 8                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 9                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym 0                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym aphostrophe                   mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym igrave                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym BackSpace                     mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Tab                           mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym q                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym w                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym e                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym r                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym t                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym y                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym u                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym i                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym o                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym p                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym egrave                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym plus                          mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Return                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Caps_Lock                     mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym a                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym s                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym d                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym f                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym g                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym h                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym j                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym k                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym l                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym ograve                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym agrave                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym ugrave                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym "Shift_L"                     mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym less                          mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym z                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym x                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym c                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym v                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym b                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym n                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym m                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym comma                         mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym period                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym minus                         mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym "Shift_R"                     mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym "Control_L"                   mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym "Super_L"                     mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym "Alt_L"                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym space                         mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym "ISO_Level3_Shift"            mode $lock $lock_style $exec $alert_lock & $touchpad_off # (alt gr)
	bindsym Menu                          mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym "Control_R"                   mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Up                            mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Left                          mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Down                          mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Right                         mode $lock $lock_style $exec $alert_lock & $touchpad_off
}

########################### SUB-MODE MODEL #####################################

# 1. Definition:
# set $<name> "<NAME>: esc to resume  ...  "
#
# 2. Command:
# bindsym <key> mode $<name> $mode_style $exec $alert $strt
# 3. Mode:
#
# mode $<name> {
#	# options
#         ...
#	# alert
#	bindsym Caps_Lock $exec $alert CAPS
#	bindsym "Super_L" $exec $alert SUPR
#	# quit
#	bindsym XF86PowerOff                  mode $quit $quit_style $exec $alert $quit
#	# super
#	bindsym Escape                        mode $super $super_style $exec $alert $super
#	# lock
#	bindsym --release Escape              mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym --border button2              mode $lock $lock_style $exec $alert_lock & $touchpad_off_2
#	# unused keys
#	bindsym Delete                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym backslash                     mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 1                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 2                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 3                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 4                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 5                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 6                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 7                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 8                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 9                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym 0                             mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym aphostrophe                   mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym igrave                        mode $lock $lock_style $exec $alert_lock & $touchpad_off
