 #                              CONFIGURATIONS                                 #

 mode $cnf {

 # $cnf: options
 bindsym Mod4+c mode $wrt $exec $emacs ~/.i3/; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
 bindsym Mod4+a mode $wrt $exec $emacs /sudo::/usr/share/applications/; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
 bindsym Mod4+b mode $wrt $exec $emacs /sudo::/etc/default/grub; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
 bindsym Mod4+e mode $wrt $exec $emacs ~/.emacs; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
 bindsym Mod4+g mode $wrt $exec chromium --new-window i3wm.org/docs/userguide.html; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
