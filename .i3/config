 bindsym y nop
 bindsym u nop
 bindsym i nop
 bindsym o nop
 bindsym p nop
 bindsym egrave nop
 bindsym plus nop
 bindsym "Caps_Lock" nop
 bindsym a nop
 bindsym d nop
 bindsym f nop
 bindsym g nop
 bindsym j nop
 bindsym k nop
 bindsym l nop
 bindsym ograve nop
 bindsym agrave nop
 bindsym ugrave nop
 bindsym "Shift_L" nop
 bindsym less nop
 bindsym z nop
 bindsym x nop
 bindsym c nop
 bindsym v nop
 bindsym b nop
 bindsym n nop
 bindsym m nop
 bindsym comma nop
 bindsym period nop
 bindsym minus nop
 bindsym "Shift_R" nop
 bindsym "Control_L" nop
 bindsym "Control_R" nop
 bindsym Up nop
 bindsym Left nop
 bindsym Down nop
 bindsym Right nop


 }

 # # # # # # # # # # # # # # # # #TOUCH-MODE # # # # # # # # # # # # # # # # # #

 mode $tch {
 # # # # # # # MODES # # # # # # #

 bindsym XF86PowerOff $no_border mode $pow $exec $alert $pow, fullscreen disable; $exec $touchpad_off

 # exit to write mode
 bindsym space $no_border mode $def $exec $alert $wrt; $exec $touchpad_off
 bindsym Delete $no_border mode $def $exec $alert $wrt; $exec $touchpad_off
 bindsym BackSpace $no_border mode $def $exec $alert $wrt; $exec $touchpad_off
 bindsym Return $no_border mode $def $exec $alert $wrt; $exec $touchpad_off
 bindsym Tab $no_border mode $def $exec $alert $wrt; $exec $touchpad_off
 bindsym $alt_gr $no_border mode $def $exec $alert $wrt; $exec $touchpad_off
 bindsym "Alt_L" $no_border mode $def $exec $alert $wrt; $exec $touchpad_off
 bindsym --border button2 $no_border mode $def $exec $alert $wrt; $exec $touchpad_off


 bindsym "Super_L" $border mode $sup $exec $alert $sup, $focus_one fullscreen disable; $exec $touchpad_off

 bindsym Menu $no_border mode $hov $exec $alert $how & $enable_hover_mode; $exec $touchpad_off

 bindsym Mod4+Menu $no_border mode $hov $exec $alert $how & $enable_hover_mode; $exec $touchpad_off

 # unused keys
 bindsym backslash nop
 bindsym 1 nop
 bindsym 2 nop
 bindsym 3 nop
 bindsym 4 nop
