 # # # # # # # # # # # # # # # # HOVER-MODE # # # # # # # # # # # # # # # # # # #

 mode $hov {

 # # # # # # # # MODES # # # # # # #

 bindsym XF86PowerOff $no_border mode $pow $exec $alert $pow, fullscreen disable; $exec $disable_hover_mode

 # exit to write mode
 bindsym space $no_border mode $def $exec $alert $wrt; $exec $disable_hover_mode
 bindsym Delete $no_border mode $def $exec $alert $wrt; $exec $disable_hover_mode
 bindsym BackSpace $no_border mode $def $exec $alert $wrt; $exec $disable_hover_mode
 bindsym Return $no_border mode $def $exec $alert $wrt; $exec $disable_hover_mode
 bindsym Tab $no_border mode $def $exec $alert $wrt; $exec $disable_hover_mode
 bindsym $alt_gr $no_border mode $def $exec $alert $wrt; $exec $disable_hover_mode
 bindsym --border button2 $no_border mode $def $exec $alert $wrt; $exec $disable_hover_mode


 bindsym --release "Super_L" $border mode $sup $exec $alert $sup, $focus_one fullscreen disable; $exec $disable_hover_mode

 bindsym Mod4+r $no_border mode $red $exec $alert $red; $exec $disable_hover_mode

 bindsym Mod4+z $no_border mode $str $exec $alert $str; $exec $disable_hover_mode

 bindsym Mod4+c $no_border mode $cnf $exec $alert $cnf; $exec $disable_hover_mode

 bindsym Mod4+space $no_border mode $tch $exec $alert $tch & $touchpad_on; $exec $disable_hover_mode


 # # # # # # # COMMANDS # # # # # #


 bindsym control+e $no_border mode $def $exec dmenu_run; $exec $alert $wrt; $exec $disable_hover_mode

 bindsym Shift+exclam $no_border mode $def $exec $dmenu; $exec $alert $wrt; $exec $disable_hover_mode
 
 # display
 bindsym XF86Display $exec xrandr --output eDP1 --mode 1920x1080 --preferred

 # screen brightness controls
 bindsym XF86MonBrightnessUp $exec $brightness_up
 bindsym XF86MonBrightnessDown $exec $brightness_down

 # screenshot
 bindsym --release Print $exec $stamp

 # touchpad toggle
 bindsym XF86TouchpadToggle $exec $touchpad_toggle


 # browse workspaces
 bindsym Mod1+Tab workspace next; $refresh_status_bar
 bindsym Mod1+Shift+Tab workspace prev; $refresh_status_bar

 # kill
 bindsym Mod1+F4 kill; $refresh_status_bar


 # default move
 bindsym Mod4+Shift+Up move up
 bindsym Mod4+Shift+Left move left
 bindsym Mod4+Shift+Down move down
 bindsym Mod4+Shift+Right move right

 # focus group
 bindsym Mod4+less focus child
 bindsym Mod4+Shift+greater focus parent

 # fullscreen
