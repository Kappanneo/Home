 bindsym Mod4+1 mode $wrt $exec $emacs ~/.workspaces/1.json; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide
 bindsym Mod4+2 mode $wrt $exec $emacs ~/.workspaces/2.json; $exec $alert $wrt && $mouse_off && $touchpad_off && $pointer_hide

 # $cnf: exit to other mode
# WARNING: key already taken for command:
# bindsym Mod4+b mode $brg; $exec $alert $brg
 bindsym control+"Super_L" mode $lft; $exec $alert $lft && $wasd_enable
 bindsym XF86PowerOff mode $pow; $exec $alert $pow, fullscreen disable
