# i3 config file (v4)
#
# Please see https://i3wm.org/docs/userguide.html for a complete reference!
#
# This config file uses keycodes (bindsym) and was written for the QWERTY
# layout.
#
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
#

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:monospace 8

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesnâ€™t scale on retina/hidpi displays.

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up i
set $down k
set $left j
set $right l

# use Mouse+Mod1 to drag floating windows to their wanted position
floating_modifier Mod1

################################WORKSPACES######################################

#workspaces
set $w1 1nternet
set $w2 2rectory
set $w3 3code
set $w4 4terminl
set $w5 5team
set $w6 6pack
set $w7 7nani
set $w8 8volante
set $w9 9a
set $w0 0z

# switch to workspace
bindsym Mod1+1 workspace $w1
bindsym Mod1+2 workspace $w2
bindsym Mod1+3 workspace $w3
bindsym Mod1+4 workspace $w4
bindsym Mod1+5 workspace $w5
bindsym Mod1+6 workspace $w6
bindsym Mod1+7 workspace $w7
bindsym Mod1+8 workspace $w8
bindsym Mod1+9 workspace $w9
bindsym Mod1+0 workspace $w0

# move focused container to workspace
bindsym Mod1+control+1 move container to workspace $w1
bindsym Mod1+control+2 move container to workspace $w2
bindsym Mod1+control+3 move container to workspace $w3
bindsym Mod1+control+4 move container to workspace $w4
bindsym Mod1+control+5 move container to workspace $w5
bindsym Mod1+control+6 move container to workspace $w6
bindsym Mod1+control+7 move container to workspace $w7
bindsym Mod1+control+8 move container to workspace $w8
bindsym Mod1+control+9 move container to workspace $w9
#bindsym Mod1+control+0 move container to workspace $w0

# move focused container to workspace and follow
bindsym Mod1+Shift+1 move container to workspace $w1; workspace $w1
bindsym Mod1+Shift+2 move container to workspace $w2; workspace $w2
bindsym Mod1+Shift+3 move container to workspace $w3; workspace $w3
bindsym Mod1+Shift+4 move container to workspace $w4; workspace $w4
bindsym Mod1+Shift+5 move container to workspace $w5; workspace $w5
bindsym Mod1+Shift+6 move container to workspace $w6; workspace $w6
bindsym Mod1+Shift+7 move container to workspace $w7; workspace $w7
bindsym Mod1+Shift+8 move container to workspace $w8; workspace $w8
bindsym Mod1+Shift+9 move container to workspace $w9; workspace $w9
#bindsym Mod1+Shift+0 move container to workspace $w0; workspace $w0

#custom layouts
set $layout_1 exec --no-startup-id "i3-msg 'workspace 1nternet; append_layout /home/claudio/1nternet.json'"
set $fill_1 exec --no-startup-id chromium-browser --profile-directory=Default & chromium-browser --profile-directory=Default --app-id=hmjkmjkepdijhoojdojkdfohbdgmmhki
set $layout_2 exec --no-startup-id "i3-msg 'workspace 2rectory; append_layout /home/claudio/2rectory.json'"
set $fill_2 exec --no-startup-id nautilus & nautilus Downloads & chromium-browser --profile-directory=Default & i3-sensible-terminal

################################COMMANDS########################################

# start a terminal
bindsym Mod1+Return split v; exec i3-sensible-terminal

# kill focused window
bindsym Mod1+F4 kill

#screenshot
bindsym --release Print exec --no-startup-id import /tmp/latest-screenshot.png
bindsym Mod1+p exec --no-startup-id emacs /tmp/latest-screenshot.png

#touchpad enable/disable
set $touchpad_on xinput set-prop "FocalTechPS/2 FocalTech FocalTech Touchpad" "Device Enabled" 1
set $touchpad_off xinput set-prop "FocalTechPS/2 FocalTech FocalTech Touchpad" "Device Enabled" 0
set $touchpad_toggle /home/claudio/.touchpad_toggle.sh

#touchpad toggle
bindsym XF86TouchpadToggle exec --no-startup-id $touchpad_toggle

#volume
bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 1 -q sset Master 1dB+
bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 1 -q sset Master 1dB-
bindsym XF86AudioMute exec --no-startup-id amixer -c 1 -q -D pulse set Master 1+ toggle

# change focus
bindsym Mod1+Tab focus right
bindsym Mod1+backslash focus left
bindsym Mod1+q focus down

bindsym Mod1+$left focus left
bindsym Mod1+$down focus down
bindsym Mod1+$up focus up
bindsym Mod1+$right focus right

# alternatively, you can use the cursor keys:
bindsym Mod1+Left focus left
bindsym Mod1+Down focus down
bindsym Mod1+Up focus up
bindsym Mod1+Right focus right

# move focused window
bindsym Mod1+Shift+$left move left
bindsym Mod1+Shift+$down move down
bindsym Mod1+Shift+$up move up
bindsym Mod1+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym Mod1+Shift+Left move left
bindsym Mod1+Shift+Down move down
bindsym Mod1+Shift+Up move up
bindsym Mod1+Shift+Right move right

# Split in horizontal orientation.
bindsym Mod1+h split h

# Split in vertical orientation.
bindsym Mod1+v split v

# focus the parent container
bindsym Mod1+a focus parent

# focus the child container
bindsym Mod1+z focus child

#fullscreen
bindsym Mod1+f fullscreen toggle

#open emacs
bindsym Mod1+e exec --no-startup-id emacs

#go to emacs
bindsym Mod1+c [title="emacs"] focus

# resize window (you can also use the mouse for that)
bindsym Mod1+minus         resize shrink width  1 px or 1 ppt
bindsym Mod1+control+minus resize shrink height 1 px or 1 ppt
bindsym Mod1+plus          resize grow   width  1 px or 1 ppt
bindsym Mod1+control+plus  resize grow   height 1 px or 1 ppt

#layouts
bindsym Mod1+y exec i3-save-tree > ~/workspace.json; exec --no-startup-id notify-send --expire-time=2000  "Layout saved"
bindsym Mod1+control+Shift+1 $layout_1; $fill_1
bindsym Mod1+control+Shift+2 $layout_2; $fill_2

#configs
bindsym Mod1+control+c exec --no-startup-id emacs /home/claudio/.config/i3/config
bindsym Mod1+control+e exec --no-startup-id emacs /home/claudio/.emacs
bindsym Mod1+control+s exec --no-startup-id emacs /home/claudio/.config/i3status/config
bindsym Mod1+control+b exec --no-startup-id emacs /home/claudio/.bashrc
bindsym Mod1+control+z exec --no-startup-id emacs /home/claudio/.zshrc
bindsym Mod1+control+y exec --no-startup-id emacs /home/claudio/workspace.json
bindsym Mod1+control+g exec --no-startup-id chromium-browser --new-window file:///home/claudio/i3%20User%E2%80%99s%20Guide.html

# reload the configuration file
bindsym Mod1+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym Mod1+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym Mod1+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -b 'Yes, exit i3' 'i3-msg exit'"

################################ALERTS##########################################

bindsym Caps_Lock exec --no-startup-id notify-send --expire-time=20000 --urgency=critical CAPS

# start dmenu (a program launcher)
bindsym Mod1+d exec dmenu_run; exec --no-startup-id notify-send --expire-time=2000 --urgency=critical EXEC

# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# Since it's slow as **** someone made an actually good one: sudo apt-get install j4-dmenu-desktop
bindsym Escape exec --no-startup-id i3-dmenu-desktop; exec --no-startup-id notify-send --expire-time=2000 --urgency=critical EXEC

################################MODES###########################################

set $lock "LOCK: alt+space to unlock"
set $quit "QUIT: esc to resume  q to quit  r to restart  s to suspend  e to exit i3"
set $rdsh "RDSH: alt+r to resume  0-9 to shift"

mode $lock {
     	#exit
        bindsym Mod1+space mode "default" exec --no-startup-id $touchpad_on & notify-send --expire-time=500 --urgency=critical UNLOCK
	#alerts
	bindsym Caps_Lock exec --no-startup-id notify-send --expire-time=20000 --urgency=critical CAPS
	#volume
	bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -c 1 -q sset Master 1dB+
	bindsym XF86AudioLowerVolume exec --no-startup-id amixer -c 1 -q sset Master 1dB-
	bindsym XF86AudioMute exec --no-startup-id amixer -c 1 -q -D pulse set Master 1+ toggle
	#touchpad
	bindsym XF86AudioMute exec --no-startup-id $touchpad_toggle
	#panic
	bindsym Mod1+F4 kill
	bindsym XF86PowerOff mode $quit exec --no-startup-id notify-send --expire-time=5000 --urgency=critical $quit
}

bindsym Mod1+space mode $lock exec --no-startup-id $touchpad_off & xdotool mousemove 750 3000 & notify-send --expire-time=2000 --urgency=critical $lock

mode $quit {
        #exit
     	bindsym Escape mode "default" exec --no-startup-id notify-send --expire-time=500 --urgency=critical RESUME
	bindsym q exec --no-startup-id shutdown -h now 
	bindsym r exec --no-startup-id reboot
	bindsym s mode "default" exec --no-startup-id systemctl suspend
	bindsym e exec --no-startup-id xmodmap -e "keycode 0x85 = Super_L"; exec --no-startup-id "i3-msg exit"
	bindsym XF86PowerOff exec --no-startup-id notify-send --expire-time=5000 --urgency=critical $quit
}

bindsym XF86PowerOff mode $quit; exec --no-startup-id notify-send --expire-time=5000 --urgency=critical $quit
# to disable standard poweroff: in /etc/systemd/logind.conf set HandlePowerKey=ignore

mode $rdsh {
     	bindsym Mod1+r mode "default"; exec --no-startup-id notify-send --expire-time=500 --urgency=critical RESUME
	bindsym Escape mode "default"; exec --no-startup-id notify-send --expire-time=500 --urgency=critical RESUME
	bindsym 1 exec --no-startup-id redshift -O 2000K
	bindsym 2 exec --no-startup-id redshift -O 2500K
	bindsym 3 exec --no-startup-id redshift -O 3000K
	bindsym 4 exec --no-startup-id redshift -O 3500K
	bindsym 5 exec --no-startup-id redshift -O 4000K
	bindsym 6 exec --no-startup-id redshift -O 4500K
	bindsym 7 exec --no-startup-id redshift -O 5000K
	bindsym 8 exec --no-startup-id redshift -O 5500K
	bindsym 9 exec --no-startup-id redshift -O 6000K
	bindsym 0 exec --no-startup-id redshift -O 6500K
	#panic
	bindsym XF86PowerOff mode $quit; exec --no-startup-id notify-send --expire-time=5000 --urgency=critical $quit
}

bindsym Mod1+r mode $rdsh; exec --no-startup-id notify-send --expire-time=5000 --urgency=critical $rdsh

################################BAR#############################################

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command    i3status
    	position          bottom
    	mode              dock
    	workspace_buttons yes
    	tray_output       primary
    	colors {
    	           background #000000
    	       	   statusline #999999
    	       	   focused_workspace  #ffffff #000000
    	       	   active_workspace   #ffffff #000000
    	       	   inactive_workspace #888888 #000000
    	       	   urgent_workspace   #ffffff #000000
    	       }
    }

################################ASSIGNS#########################################

#steam
assign [class="Steam"] $w5
for_window [title="Steam - News"] kill
for_window [title="Friends"] resize shrink width 34 px or 34 ppt
for_window [title="Steam"] resize grow width 34 px or 34 ppt

#code
assign [title="Visual Studio Code"] $w3

#nautilus confining
assign [title="Desktop"] $w0

#chromium profile error kill
for_window [title="Profile error occurred"] kill

#no title-bars
new_window none
new_float normal

################################STARTUP#########################################

exec --no-startup-id nm-applet #Network Manager
exec --no-startup-id xmodmap -e "keycode 0x85 = Escape" #For status bar toggle
$layout_2
$layout_1
$fill_1
$fill_2
exec --no-startup-id redshift -O 4500K
exec --no-startup-id amixer -c 1 -q -D pulse set Master 1+ mute