#	bindsym Shift+question                mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Shift+asciicircum             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+q                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Shift+w                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+e                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+r                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+t                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+y                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+u                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+i                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+o                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+p                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+eacute                  mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+asterisk                mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Shift+a                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Shift+s                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Shift+d                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+f                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+g                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+h                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+j                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+k                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+l                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+ccedilla                mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+degree                  mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+section                 mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Shift+greater                 mode $lock $lock_style $exec $alert_lock & $touchpad_off
#	bindsym Shift+z                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+x                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+c                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+v                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+b                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+n                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+m                       mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+semicolon               mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+colon                   mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym Shift+underscore              mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# switch workspace
	bindsym --release Mod4+1              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+2              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+3              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+4              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+5              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+6              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+7              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+8              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+9              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+0              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+x              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+d              mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# also Tab
	bindsym --release Mod4+Tab            mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+Shift+Tab      mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# change focus
	bindsym --release Mod4+o              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+k              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+l              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+ograve         mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# alternatively, you can use the cursor keys:
	bindsym --release Mod4+Up             mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+Left           mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+Down           mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+Right          mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# fullscreen
	bindsym --release Mod4+f              mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# move focused window
	bindsym --release Mod4+control+o      mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+control+k      mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+control+l      mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+control+ograve mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# alternatively, you can use the cursor keys:
	bindsym --release Mod4+control+Up     mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+control+Left   mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+control+Down   mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+control+Right  mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# split
	bindsym --release Mod4+h              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+v              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+g              mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# focus
	bindsym --release Mod4+a              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+z              mode $lock $lock_style $exec $alert_lock & $touchpad_off

	# resize window (you can also use the mouse for that)
	bindsym --release Mod4+minus          mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+m              mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+plus           mode $lock $lock_style $exec $alert_lock & $touchpad_off
	bindsym --release Mod4+p              mode $lock $lock_style $exec $alert_lock & $touchpad_off

}

